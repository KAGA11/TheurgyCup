{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
        "*": ["src/types/*"]
      }
    },
    "include": ["src"]
}